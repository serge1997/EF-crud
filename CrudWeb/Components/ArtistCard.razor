<MudCard>
    <MudCardMedia Image=@($"{profilPicture}{Artist!.Picture}") Height="120"></MudCardMedia>
    <MudCardHeader>
        <MudCardHeader>
            <MudText Typo="Typo.h6">@Artist!.Name</MudText>
        </MudCardHeader>
    </MudCardHeader>
    <MudCardContent>
        <MudText>Story of the day</MudText>
        <MudText Typo="Typo.body2">@Artist!.Bio</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton 
            Href=@($"/edit-artist/{Artist!.Name}")
            Variant="Variant.Text" 
            Color="Color.Primary">
            Detalhes
        </MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public ArtistResponse? Artist { get; set; }
    public string? profilPicture { get; set; } = "https://localhost:7248/";

