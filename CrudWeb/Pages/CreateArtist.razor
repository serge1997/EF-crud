@page "/create-artist"
@inject ArtistApi ArtistApi
@inject NavigationManager navigatorManager


<MudPaper Class="px-8 pt-2 pb-4 mx-12 my-8" Justify="Justify.Center">
    <MudText Class="mt-8" Typo="Typo.h4">Create Artist</MudText>
    <MudButton 
        @onclick="BackToList"
        Class="mt-3" 
        Variant="Variant.Outlined" 
        Color="Color.Primary">
        Go back to list 
    </MudButton>
    <MudForm>
        <MudTextField Class="mt-4" T="string" Placeholder="Artist name" 
            Variant="Variant.Outlined"
            @bind-Value="nome"
            Required="true"
            RequiredError="Field required"
         />


        <MudTextField Class="mt-4" T="string" Placeholder="Artist Bio"
            Variant="Variant.Outlined"
            @bind-Value="bio"
            Required="true"
            Lines="4"
            RequiredError="Field required"
        />

        <MudImage Class="mt-4" Src="@filImage" />
        <MudFileUpload T="IBrowserFile" Accept=".jpeg" FilesChanged="UploadImage">
            <ButtonTemplate>
                <MudButton HtmlTag="label"
                    Variant="Variant.Filled"
                    Color="Color.Primary"
                    StartIcon="@Icons.Material.Filled.PhotoCamera"
                    for="@context" >
                Artist Picture
                </MudButton>
            </ButtonTemplate>
        </MudFileUpload>

        <div class="d-flex align-center justify-space-between mt-4">
            <MudButton 
                Variant="Variant.Filled"
                @onclick="OnCreate"
                Color="Color.Primary"
                Class="ml-auto">
                Save
            </MudButton>
        </div>
    </MudForm>
</MudPaper>


@code {
    private string? nome;
    private string? bio;
    private string? filImage;
    private string? picture;


    private async Task OnCreate()
    {
        var request = new ArtistRequest(nome!, bio!, picture);
        await ArtistApi.CreateArtistAsync(request);
        navigatorManager.NavigateTo("/artist");
    }

    private void BackToList()
    {
        navigatorManager.NavigateTo("/artist");
    }

    private async Task UploadImage(IBrowserFile file)
    {
        long maxFileSize = 1024 * 1024 * 15;
        var format = "image/jpeg";
        var resizedImage = await file.RequestImageFileAsync(format, 200, 200);

        using var fileStream = resizedImage.OpenReadStream();
        using var memoryStream = new MemoryStream();
        await fileStream.CopyToAsync(memoryStream);

        var imgConvert = Convert.ToBase64String(memoryStream.ToArray());
        filImage = $"data:{format};base64,{imgConvert}";
        picture = imgConvert;
    }

}
